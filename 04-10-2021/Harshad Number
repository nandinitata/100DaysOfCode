 #include <iostream>
    using namespace std;
    int main()  
    {  
        int num,sum = 0;  
        cout<<“Enter number: “;
        cin>>num;
        int n = num;   
        while(num > 0)
        {  
            int rem = num%10;  
            sum = sum + rem;  
            num = num/10;  
        }      
        if(n % sum == 0)  
            cout<<n<<” is a harshad number”;  
        else  
            cout<<n<<” is not a harshad number”;
        return 0;  
        }
