#include<iostream>
using namespace std;
 
int main()  
{  
    int i,j,k=0,row=5;
    for (i=1;i<=row;i++)
    {
        for(j=1;j<=row-i;j++)
        cout<<" ";
        while(k!=(2*i-1))
        {
            cout<<"*";
            k++;
        }
        k=0;
        cout<<endl;
    }
    return 0;
} 
